<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPassword">
    <ImageView
        android:id="@+id/newpaasword_cover"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/background"/>
    <EditText
        android:id="@+id/newpassword_first"
        android:layout_below="@id/newpaasword_cover"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_45sdp"
        android:padding="@dimen/_15sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_13sdp"
        android:hint="New Password"
        android:textAlignment="textStart"
        android:drawableEnd="@drawable/ic_password"
        android:layout_marginEnd="@dimen/_25sdp"
        android:elevation="10dp"
        android:inputType="textPassword"
        android:background="@drawable/login_textfield"/>
    <EditText
        android:id="@+id/newpassword_second"
        android:layout_below="@id/newpassword_first"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_45sdp"
        android:padding="@dimen/_15sdp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:textSize="@dimen/_13sdp"
        android:hint="Confirm Password"
        android:textAlignment="textStart"
        android:drawableEnd="@drawable/ic_password"
        android:layout_marginEnd="@dimen/_25sdp"
        android:elevation="10dp"
        android:background="@drawable/login_textfield"/>
    <ImageButton
        android:id="@+id/newpassword_confirm"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/newpassword_second"
        android:background="@drawable/login_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="â†’"
        android:elevation="10dp"
        android:onClick="newPasswordChanged"
        android:foreground="@drawable/ic_baseline_arrow_forward"
        android:foregroundGravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET \nPASSWORD"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:layout_below="@id/newpassword_second"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_20sdp"/>

</RelativeLayout>