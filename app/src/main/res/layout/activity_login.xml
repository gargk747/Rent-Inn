<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_cover"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/background"/>
            <TextView
                android:id="@+id/login_text"
                android:textStyle="bold"
                android:text="RENT-INN"
                android:textSize="30dp"
                android:layout_below="@id/login_cover"
                android:textColor="@color/black"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/login_phoneNoEmail"
                android:layout_width="match_parent"
                android:layout_below="@id/login_text"
                android:layout_height="50dp"
                android:padding="18dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:hint="Phone Number/Email Address"
                android:textAlignment="textStart"
                android:drawableEnd="@drawable/ic_username"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:background="@drawable/login_textfield"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_below="@id/login_phoneNoEmail"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:padding="18dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:drawableEnd="@drawable/ic_password"
                android:layout_marginEnd="40dp"
                android:elevation="10dp"
                android:background="@drawable/login_textfield"/>

            <TextView
                android:layout_below="@id/login_password"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:text="SIGN IN"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/login_forgotpassword"
                android:layout_below="@id/login_password"
                android:layout_marginTop="60dp"
                android:layout_marginStart="20dp"
                android:text="Forgot password?"
                android:onClick="forgotpasswordclick"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/login_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="10dp"
                android:background="@drawable/login_button"
                android:layout_below="@id/login_password"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="30dp"
                android:foregroundGravity="center"
                android:onClick="loginClick"
                android:foreground="@drawable/ic_baseline_arrow_forward"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_button"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="or Login with"
                android:textColor="@color/black"
                android:textSize="18dp"
                />
            <ImageButton
                android:id="@+id/login_fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="10dp"
                android:background="@drawable/login_button"
                android:layout_below="@id/login_button"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"
                android:foreground="@drawable/fb1"
                android:layout_marginStart="30dp"
                />
            <ImageButton
                android:id="@+id/login_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="10dp"
                android:background="@drawable/login_button"
                android:layout_below="@id/login_button"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"
                android:foreground="@drawable/google1"
                android:layout_marginStart="90dp"
                />
            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_button"
                android:layout_marginTop="78dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:onClick="newUserClick"
                android:text="I am new, Register me!"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                />

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>